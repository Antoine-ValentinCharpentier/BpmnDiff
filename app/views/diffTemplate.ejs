<!DOCTYPE html>
<html>
<head>
  <title>BPMN Diff Viewer</title>
  <meta charset="utf-8">
  <meta http-equiv="content-type" content="text/html; charset=utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <!-- <link rel="stylesheet" type="text/css" href="/css/bpmnio.css"> -->
  <link rel="stylesheet" type="text/css" href="/css/diff.css">
  <link rel="stylesheet" type="text/css" href="/css/app.css">

</head>
<body>
  <div class="content">

    <div class="di-container left<%= manualMode ? ' drop-zone' : '' %>" target="left">
      <div class="io-control di-header">
        <h2>Previous BPMN</h2>
        <% if (manualMode) { %>
          <input class="file" type="file" target="left">
        <% } %>
      </div>

      <div class="canvas" id="canvas-left"></div>
    </div>

    <div class="di-container right <%= manualMode ? 'drop-zone' : '' %>" target="right">
      <div class="io-control di-header">
        <h2>New BPMN</h2>
        <% if (manualMode) { %>
          <input class="file" type="file" target="right">
        <% } %>
      </div>

      <div class="canvas" id="canvas-right"></div>
    </div>

    <div id="changes-overview" class="collapsed">
      <div class="io-control show-hide-toggle">List of Changes</div>
      <div class="io-control changes"></div>
    </div>

  </div>

  <script>
    window.__XML_BEFORE__ = `<%- xmlBefore %>`;
    window.__XML_AFTER__ = `<%- xmlAfter %>`;
  </script>

  <% if (!isProd) { %>
    <script type="module" src="/@vite/client"></script>
    <script type="module" src="/main.js"></script>
  <% } else { %>
    <script type="module" src="/<%= mainJs %>"></script>
  <% } %>

</body>
</html>
